# build React app
FROM node:20-alpine AS build
WORKDIR /app
COPY FrontEndTicketProject/package*.json ./
RUN npm ci
COPY FrontEndTicketProject/ ./
RUN npm run build

# serve with nginx
FROM nginx:alpine
COPY ticket-infra/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
