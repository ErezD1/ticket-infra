FROM nginx:alpine

# NGINX config adds SPA-style routing and /api proxy to backend:8080
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy the *raw* frontend project into the web root.
# If your app is a static site, index.html should be here.
# If it's a framework app that needs a build step, tell me and we'll switch to a multi-stage Node build.
COPY FrontEndTicketProject/ /usr/share/nginx/html/

EXPOSE 80
